<%= @tweet %>

<a class="btn btn-lg btn-default twitter popup" href="http://twitter.com/share?text=Map%20My%20Reads">Tweet</a>

<script>
$('.popup').click(function(event) {
  var width  = 575,
  height = 400,
  left   = ($(window).width()  - width)  / 2,
  top    = ($(window).height() - height) / 2,
  url    = "https://twitter.com/intent/tweet?text=I read <%= @title %> in <%= @city %>. @mapmyreads"
  opts   = 'status=1' +
  ',width='  + width  +
  ',height=' + height +
  ',top='    + top    +
  ',left='   + left;

  window.open(url ,'twitter', opts);

  return false;
});
</script>
</div>
