<div class="main_header">
  <h1>Read With Me?</h1></br>
  <p>A platform for chronicling the geography of your reading.</p>
</div>

<div class="page_header">
<%= render "filter" %>
  <% @books.each do |book| %>
  <div class="book" data-city="<%= book.city %>">
    <h3><%= book.title %></h3>
    <dl>
      <dd class="book_city"><%= book.city %></dd>
    </dl>
  </div>
  <% end %>


  <%= @tweet %>

  <a class="btn btn-lg btn-default twitter popup" href="http://twitter.com/share?text=Read%20with%20me?">Tweet</a>

  <script>
  $('.popup').click(function(event) {
    var width  = 575,
    height = 400,
    left   = ($(window).width()  - width)  / 2,
    top    = ($(window).height() - height) / 2,
    url    = "https://twitter.com/intent/tweet?text=Read%20with%20me%3F"
    opts   = 'status=1' +
    ',width='  + width  +
    ',height=' + height +
    ',top='    + top    +
    ',left='   + left;

    window.open(url ,'twitter', opts);

    return false;
  });
  </script>
</div>

<p><%= link_to "Submit Another Book", new_book_path, class: "btn btn-lg btn-default" %></p>
</div>
